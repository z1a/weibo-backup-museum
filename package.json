{
  "name": "weibo-museum",
  "description": "Backup and browse your weibo locally",
  "author": {
    "name": "z1a"
  },
  "version": "0.1.0",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc && node ./internals/post-build.js",
    "watch": "tsc -w",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.electron.weibo-museum",
    "copyright": "Copyright Â© 2020 z1a",
    "files": [
      "node_modules/**/*",
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": null
    },
    "directories": {
      "buildResources": "resources",
      "output": "release",
      "app": "."
    }
  },
  "dependencies": {
    "moment": "^2.29.1",
    "polished": "^4.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.2.3"
  },
  "devDependencies": {
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/styled-components": "^5.1.9",
    "electron": "^15.5.5",
    "electron-builder": "^22.10.5",
    "typescript": "^4.2.4"
  }
}
